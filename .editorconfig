# editorconfig.org
# Ref: https://editorconfig.org/

# top-most EditorConfig file
root = true

[*]
indent_style = space
tab_width = 2
indent_size = 2
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

[*.md]
indent_style = space
tab_width = 2
indent_size = 2
trim_trailing_whitespace = false

[*.{yml, yaml}]
indent_style = space
tab_width = 2
indent_size = 2
